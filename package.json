  "license": "MIT",
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "ava": "^3.8.2",
    "cross-env": "^7.0.2",
    "rimraf": "^3.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "lodash.throttle": "^4.1.1"
  }
}
